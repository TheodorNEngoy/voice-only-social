# === App ===
NODE_ENV=development
APP_BASE_URL=http://localhost:3000
PORT=3000

# === Database & Cache ===
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/voiceonly
REDIS_URL=redis://localhost:6379

# === Auth ===
JWT_SECRET=replace_me_with_long_random_string
JWT_EXPIRES_IN=7d

# === Email (verification/reset) ===
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=no-reply@yourdomain.com

# === Storage (S3-compatible) ===
S3_REGION=us-east-1
S3_BUCKET=voiceonly-dev
S3_PUBLIC_BUCKET=voiceonly-public-dev
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# === Upload limits & processing ===
UPLOAD_MAX_DURATION_SECONDS=600
MAX_AUDIO_BYTES=15728640
FFMPEG_PATH=ffmpeg
PROCESSING_CONCURRENCY=4

# === STT / Captions ===
STT_PROVIDER=openai              # openai | google | aws | azure
OPENAI_API_KEY=
STT_LANGUAGE=auto
STT_ENABLE_PUBLIC_CAPTIONS=true
STT_ENABLE_DM_TRANSCRIPTS=false

# === Moderation (example) ===
MODERATION_PROVIDER=openai
OPENAI_API_KEY_MOD=
